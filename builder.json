{
	"sourceDir":"src",
	"includeDir":"include",
	"outputName":"ctx",
	"defaultMode":"debug",
	"outputDir":[
		"bin",
		"%mode"
	],
	"objectDir":[
		"build",
		"%mode"
	],
	"compileCmd": "g++ -c",
	"linkCmd": "g++",
	"compileFlags":[
		"-std=c++20",
		"-o",
		"%out",
		"-Wall",
		"-Wextra",
		"-fno-exceptions",
		"-fno-rtti",
		"-pedantic",
		"-Iinclude",
		"%in"
	],
	"linkFlags":[
		"-o",
		"%out",
		"%in",
		"%libStyle",
		"%libs"
	],
	"libs":[
		"-lncursesw",
		"-lX11"
	],
	"installLoc":"/usr/local/bin/",
	"installCmd":[
		"cp",
		"bin/",
		"#%outputName",
		"%installLoc",
		"#%outputName"
	],
	"libStyle":"",
	"libStylePointer":"",
	"modes": {
		"windows":{
			"compileCmd":"",
			"linkCmd":"",
			
			"set":{
				"libs":[
					"-lshlwapi"
				],
				"libStylePointer":"libStyle",
				"installLoc":"%SystemRoot%",
				"installCmd":[
					"copy",
					"bin\\",
					"#%outputName",
					"#.exe",
					"\\%SystemRoot%"
				]
			}
		},
		"debug":{
			"compileFlags":[
				"-ggdb3",
				"-Og"
			]
		},
		"release":{
			"set":{
				"%libStylePointer":"-static"
			},
			"outputDir":"bin",
			"compileFlags":[
				"-O3",
				"-DNDEBUG"
			],
			"linkFlags":[
				"-s"
			]
		},
		"size":{
			"compileFlags":[
				"-Os",
				"-fdata-sections",
				"-ffunction-sections",
				"-fvisibility=hidden",
				"-fvisibility-inlines-hidden",
				"-DNDEBUG"
			],
			"linkFlags":[
				"-s",
				"-Wl,--gc-sections",
				"-Bsymbolic",
				"-Wl,--exclude-libs,ALL"
			]
		},
		"install":{
			"compileCmd":"",
			"linkCmd":"",
			"preCmds":[
				[
					"echo Installing context at",
					"%installLoc",
					"#..."
				],
				[
					"echo",
					"%installCmd"
				],
				[
					"%installCmd"
				]
			]
		}
	}
}
