{
	"sourceDir":"src",
	"headerExt":"h",
	"sourceExt":"cpp",
	"outputName":"context",
	"testVar":[
		"this",
		"is",
		"a",
		"%platform",
		"test at",
		"time:",
		"#%utime"
	],
	"outputDir":[
		"bin",
		"%mode"
	],
	"objectDir":[
		"build",
		"%mode"
	],
	"compileCmd": "g++ -c",
	"linkCmd": "g++",
	"compileFlags":[
		"-std=c++20",
		"-o",
		"%out",
		"-Wall",
		"-Wextra",
		"-fno-exceptions",
		"-fno-rtti",
		"-pedantic",
		"-DCURSES_INTERFACE",
		"-Iinclude",
		"%in"
	],
	"linkFlags":[
		"-o",
		"%out",
		"-lncursesw",
		"%in"
	],
	"modes": {
		"debug":{
			"compileFlags":[
				"-ggdb3",
				"-Og"
			]
		},
		"release":{
			"outputDir":"bin",
			"compileFlags":[
				"-O3",
				"-DNDEBUG"
			],
			"linkFlags":[
				"-s"
			]
		},
		"size":{
			"compileFlags":[
				"-Os",
				"-fdata-sections",
				"-ffunction-sections",
				"-fvisibility=hidden",
				"-fvisibility-inlines-hidden",
				"-DNDEBUG"
			],
			"linkFlags":[
				"-s",
				"-Wl,--gc-sections",
				"-Bsymbolic",
				"-Wl,--exclude-libs,ALL"
			]
		},
		"install":{
			"compileCmd":"",
			"linkCmd":"",
			"preCmds":[
				"echo Installing context at /usr/local/bin/context...",
				"cp bin/context /usr/local/bin/context"
			]
		}
	}
}
