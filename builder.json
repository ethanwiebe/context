{
	"sourceDir":"src",
	"outputDir":"bin",
	"headerExtension":"h",
	"sourceExtension":"cpp",
	"outputName":"context",
	"compileCommand": "g++ -c",
	"linkCommand": "g++",
	"compileFlags":[
		"-std=c++20",
		"-o",
		"%output",
		"-Wall",
		"-Wextra",
		"-fno-exceptions",
		"-fno-rtti",
		"-pedantic",
		"-DCURSES_INTERFACE",
		"%input"
	],
	"linkFlags":[
		"-o",
		"%output",
		"-lncursesw",
		"%input"
	],
	"modes": {
		"debug":{
			"objectDir":"build/debug",
			"outputDir":"bin/debug",
			"compileFlags":[
				"-ggdb3",
				"-Og"
			]
		},
		"release":{
			"objectDir":"build/release",
			"compileFlags":[
				"-O3",
				"-DNDEBUG"
			],
			"linkFlags":[
				"-s"
			]
		},
		"size":{
			"objectDir":"build/size",
			"outputDir":"bin/size",
			"compileFlags":[
				"-Os",
				"-fdata-sections",
				"-ffunction-sections",
				"-fvisibility=hidden",
				"-fvisibility-inlines-hidden",
				"-DNDEBUG"
			],
			"linkFlags":[
				"-s",
				"-Wl,--gc-sections",
				"-Bsymbolic",
				"-Wl,--exclude-libs,ALL"
			]
		},
		"install":{
			"compileCommand":"",
			"linkCommand":"",
			"preCommands":[
				"cp bin/context /usr/local/bin/context"
			]
		}
	}
}
