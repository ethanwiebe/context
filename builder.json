{
	"sourceDir":"src",
	"includeDir":"include",
	"outputName":"ctx",
	"defaultMode":"debug",
	"outputDir":[
		"bin",
		"%mode"
	],
	"objectDir":[
		"build",
		"%mode"
	],
	"compileCmd": "g++ -c",
	"linkCmd": "g++",
	"compileFlags":[
		"-std=c++20",
		"-o",
		"%out",
		"-Wall",
		"-Wextra",
		"-fno-exceptions",
		"-fno-rtti",
		"-pedantic",
		"-DCURSES_INTERFACE",
		"-Iinclude",
		"%in"
	],
	"linkFlags":[
		"-o",
		"%out",
		"%in",
		"%libStyle",
		"%libs"
	],
	"libs":[
		"-lncursesw"
	],
	"libStyle":"",
	"libStyleSetVar":"",
	"modes": {
		"windows":{
			"compileCmd":"",
			"linkCmd":"",
			"set":{
				"libs":[
					"-lshlwapi"
				],
				"libStyleSetVar":"libStyle"
			}
		},
		"debug":{
			"compileFlags":[
				"-ggdb3",
				"-Og"
			]
		},
		"release":{
			"set":{
				"%libStyleSetVar":"-static"
			},
			"outputDir":"bin",
			"compileFlags":[
				"-O3",
				"-DNDEBUG"
			],
			"linkFlags":[
				"-s"
			]
		},
		"size":{
			"compileFlags":[
				"-Os",
				"-fdata-sections",
				"-ffunction-sections",
				"-fvisibility=hidden",
				"-fvisibility-inlines-hidden",
				"-DNDEBUG"
			],
			"linkFlags":[
				"-s",
				"-Wl,--gc-sections",
				"-Bsymbolic",
				"-Wl,--exclude-libs,ALL"
			]
		},
		"install":{
			"compileCmd":"",
			"linkCmd":"",
			"preCmds":[
				"echo Installing context at /usr/local/bin/ctx...",
				[
					"cp",
					"bin/",
					"#%outputName",
					"/usr/local/bin/",
					"#%outputName"
				]
			]
		}
	}
}
